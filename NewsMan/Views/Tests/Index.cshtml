@model NewsMan.ViewModels.TestListingModel
@{
    ViewData["Title"] = "Index";
}

<span class="badge badge-primary"><h3>Part 1 / 3</h3></span>
<p>Answer the following:</p>

<div class="row">

    <div class="col-md-10">
        <h2></h2>
        @if (@Model.Questions.Count() == 0)
        {
            <h4 style="text-indent:40px">There are currently no questions available.</h4>
        }
        else
        {

            @*Begin Form*@
            @using (Html.BeginForm("InsertDataP1", "Tests", FormMethod.Post))
            {
                <table class="table table-responsive">
                   
                    @for(int i = 0; i < @Model.Answers.Count(); i++)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(a => @Model.Answers[i].QMaster.Id)
                            </td>
                            <td>
                                @Html.ValueFor(q => @Model.Answers[i].QMaster.Question)
                            </td>
                            <td>
                                @Html.DropDownListFor(a => @Model.Answers[i].Answer,
                                        new SelectList(@Model.AnswerOptions, "Val", "Answer"), "~ Select ~")
                            </td>
                            
                        </tr>

                    }

                </table>
                <button type="submit" class="btn btn-success">Submit</button>
            }
        }
    </div>
    
</div>
